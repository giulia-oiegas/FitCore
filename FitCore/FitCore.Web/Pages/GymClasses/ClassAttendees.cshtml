@page
@model FitCore.Web.Pages.GymClasses.ClassAttendeesModel
@{
    ViewData["Title"] = "Participanti";
}

<div class="d-flex justify-content-between align-items-center mb-4 bg-white p-4 rounded shadow-sm">
    <div>
        <h4 class="text-muted m-0">Participanți la clasa:</h4>
        <h2 class="m-0 fw-bold">@Model.ClassName</h2>
    </div>

    <a asp-page="./Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Înapoi la Orar
    </a>
</div>

@if (Model.AttendeesList != null && Model.AttendeesList.Any())
{
    <div class="card border-0 shadow-sm">
        <table class="table table-hover m-0">
            <thead class="bg-light">
                <tr>
                    <th>Nume Membru</th>
                    <th>Email</th>
                    <th>Telefon</th>
                    <th>Data Rezervării</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AttendeesList)
                {
                    <tr>
                        <td class="fw-bold">
                            <i class="fas fa-user-check text-success me-2"></i>
                            @item.Member?.FirstName @item.Member?.LastName
                        </td>
                        <td>@item.Member?.Email</td>
                        <td>@item.Member?.PhoneNumber</td>
                        <td class="text-muted small">Loading... (Data rezervării nu e salvată încă)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning text-center p-5" role="alert">
        <h4 class="alert-heading"><i class="fas fa-user-slash fa-2x mb-3"></i></h4>
        <p>Nu există încă nicio rezervare pentru această clasă.</p>
    </div>
}