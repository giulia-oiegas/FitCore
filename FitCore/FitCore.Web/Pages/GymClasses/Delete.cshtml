@page
@model FitCore.Web.Pages.GymClasses.DeleteModel

@{
    ViewData["Title"] = "Șterge Clasă";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        
        <div class="bg-white p-5 rounded shadow-sm text-center border-top border-5 border-danger">
            
            <div class="mb-4">
                <i class="fas fa-calendar-times text-danger fa-4x mb-3"></i>
                <h2 class="fw-bold text-dark">Anulezi această clasă?</h2>
                <p class="text-muted">Această acțiune va șterge clasa din orar definitiv.</p>
            </div>

            <div class="bg-light p-3 rounded mb-4 text-start">
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-secondary">Nume Clasă:</dt>
                    <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.GymClass.Name)</dd>

                    <dt class="col-sm-4 text-secondary">Data și Ora:</dt>
                    <dd class="col-sm-8 text-primary fw-bold">@Model.GymClass.Schedule.ToString("dd MMM yyyy, HH:mm")</dd>

                    <dt class="col-sm-4 text-secondary">Antrenor:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.GymClass.Trainer.Name)</dd>
                </dl>
            </div>

            <form method="post">
                <input type="hidden" asp-for="GymClass.Id" />
                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <a asp-page="./Index" class="btn btn-light px-4">Nu, Păstrează</a>
                    <button type="submit" class="btn btn-danger px-4">Da, Anulează Clasa</button>
                </div>
            </form>
        </div>
    </div>
</div>