@page
@model FitCore.Web.Pages.GymClasses.DetailsModel

@{
    ViewData["Title"] = "Detalii Clasă";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8">
        <div class="bg-white p-5 rounded shadow-sm">

            <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
                <h2 class="fw-bold m-0 text-primary">Detalii Sesiune</h2>
                <span class="badge bg-primary fs-6">
                    <i class="fas fa-clock me-1"></i> @Model.GymClass.DurationMinutes min
                </span>
            </div>

            <div class="row">
                <div class="col-md-6 border-end">
                    <dl class="row fs-5">
                        <dt class="col-sm-12 text-secondary small text-uppercase">Nume Clasă</dt>
                        <dd class="col-sm-12 fw-bold mb-4">@Html.DisplayFor(model => model.GymClass.Name)</dd>

                        <dt class="col-sm-12 text-secondary small text-uppercase">Antrenor</dt>
                        <dd class="col-sm-12 fw-bold mb-4">
                            <i class="fas fa-user-ninja text-warning me-2"></i>
                            @Html.DisplayFor(model => model.GymClass.Trainer.Name)
                        </dd>
                    </dl>
                </div>

                <div class="col-md-6 ps-md-4">
                    <dl class="row fs-5">
                        <dt class="col-sm-12 text-secondary small text-uppercase">Programare</dt>
                        <dd class="col-sm-12 fw-bold text-success mb-4">
                            @Model.GymClass.Schedule.ToString("dddd, dd MMMM yyyy") <br>
                            <span class="fs-4">@Model.GymClass.Schedule.ToString("HH:mm")</span>
                        </dd>

                        <dt class="col-sm-12 text-secondary small text-uppercase">Capacitate</dt>
                        <dd class="col-sm-12 fw-bold">
                            @Html.DisplayFor(model => model.GymClass.MaxCapacity) locuri
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="mt-5 d-flex gap-2 justify-content-end border-top pt-4">
                <a asp-page="./ClassAttendees" asp-route-id="@Model.GymClass.Id" class="btn btn-dark">
                    <i class="fas fa-users"></i> Vezi Înscrișii
                </a>
                <a asp-page="./Edit" asp-route-id="@Model.GymClass.Id" class="btn btn-primary px-4">
                    <i class="fas fa-edit"></i> Editează
                </a>
                <a asp-page="./Index" class="btn btn-outline-secondary px-4">Înapoi</a>
            </div>
        </div>
    </div>
</div>