@page
@model FitCore.Web.Pages.MembershipTypes.DeleteModel

@{
    ViewData["Title"] = "Șterge Abonament";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">

        <div class="bg-white p-5 rounded shadow-sm text-center border-top border-5 border-danger">

            <div class="mb-4">
                <i class="fas fa-trash-alt text-danger fa-4x mb-3"></i>
                <h2 class="fw-bold text-dark">Elimini această ofertă?</h2>
                <p class="text-muted">Abonamentul nu va mai putea fi cumpărat de noi membri.</p>
            </div>

            <div class="bg-light p-3 rounded mb-4 text-start">
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-secondary">Nume:</dt>
                    <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.MembershipType.Name)</dd>

                    <dt class="col-sm-4 text-secondary">Preț:</dt>
                    <dd class="col-sm-8 text-success fw-bold">@Model.MembershipType.Price.ToString("0.##") RON</dd>

                    <dt class="col-sm-4 text-secondary">Durată:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.MembershipType.DurationMonths) luni</dd>
                </dl>
            </div>

            <form method="post">
                <input type="hidden" asp-for="MembershipType.Id" />
                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <a asp-page="./Index" class="btn btn-light px-4">Nu, Păstrează</a>
                    <button type="submit" class="btn btn-danger px-4">Da, Șterge</button>
                </div>
            </form>
        </div>
    </div>
</div>