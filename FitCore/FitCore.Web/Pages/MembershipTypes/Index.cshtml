@page
@model FitCore.Web.Pages.MembershipTypes.IndexModel

@{
    ViewData["Title"] = "Abonamente";
}

<div class="d-flex justify-content-between align-items-center mb-4 bg-white p-4 rounded shadow-sm">
    <h2 class="m-0 text-dark" style="border:none;">TIPURI ABONAMENTE</h2>

    <div class="d-flex gap-2">
        <a asp-page="Create" class="btn btn-primary">
            <i class="fas fa-tags"></i> Abonament Nou
        </a>
    </div>
</div>

<table class="table table-hover bg-white">
    <thead>
        <tr>
            <th>Denumire</th>
            <th>Durata (Luni)</th>
            <th>Pret</th>
            <th>Descriere</th>
            <th class="text-center">Actiuni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MembershipType)
        {
            <tr>
                <td class="fw-bold">@item.Name</td>
                <td>
                    <span class="badge bg-secondary">@item.DurationMonths luni</span>
                </td>
                <td class="text-success fw-bold">@item.Price RON</td>
                <td class="text-muted small">@item.Description</td>
                <td class="text-center">
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger border-0">Sterge</a>
                </td>
            </tr>
        }
    </tbody>
</table>