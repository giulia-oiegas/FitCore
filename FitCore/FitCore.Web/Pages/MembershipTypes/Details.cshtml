@page
@model FitCore.Web.Pages.MembershipTypes.DetailsModel

@{
    ViewData["Title"] = "Detalii Abonament";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8">
        <div class="bg-white p-5 rounded shadow-sm position-relative overflow-hidden">

            <div class="position-absolute top-0 end-0 bg-primary text-white px-4 py-2 rounded-bottom-left fw-bold" style="border-bottom-left-radius: 15px;">
                OFICIAL
            </div>

            <div class="text-center border-bottom pb-4 mb-4">
                <h2 class="fw-bold m-0 text-dark display-5">@Model.MembershipType.Name</h2>
                <span class="badge bg-secondary fs-6 mt-2">Valabil @Model.MembershipType.DurationMonths luni</span>
            </div>

            <div class="row text-center mb-4">
                <div class="col-12">
                    <h3 class="display-4 fw-bold text-primary">@Model.MembershipType.Price <span class="fs-4 text-muted">RON</span></h3>
                </div>
            </div>

            <div class="bg-light p-4 rounded mb-4">
                <h5 class="text-uppercase text-secondary small mb-3 fw-bold">Descriere & Beneficii</h5>
                <p class="fs-5 text-dark m-0">
                    @if (!string.IsNullOrEmpty(Model.MembershipType.Description))
                    {
                        @Model.MembershipType.Description
                    }
                    else
                    {
                        <span class="text-muted fst-italic">Nu există descriere disponibilă.</span>
                    }
                </p>
            </div>

            <div class="mt-4 d-flex gap-2 justify-content-center">
                <a asp-page="./Edit" asp-route-id="@Model.MembershipType.Id" class="btn btn-primary px-5">
                    <i class="fas fa-edit"></i> Editează
                </a>
                <a asp-page="./Index" class="btn btn-outline-secondary px-5">Înapoi</a>
            </div>
        </div>
    </div>
</div>