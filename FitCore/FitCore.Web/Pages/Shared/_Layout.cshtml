@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager   
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitCore Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <div class="bg-dark border-right" id="sidebar-wrapper">
            <div class="sidebar-heading text-white">
                <i class="fas fa-dumbbell text-primary me-2"></i>FITCORE
            </div>
            <div class="list-group list-group-flush">
                <a asp-page="/Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                </a>
                @if(SignInManager.IsSignedIn(User))
                {
                    <a asp-page="/Members/Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fas fa-users me-2"></i> Membri
                    </a>
                    <a asp-page="/Trainers/Index" class="list-group-item list-group-item-action bg-dark text-white">
                        <i class="fas fa-user-ninja me-2"></i> Antrenori
                    </a>
                    <a asp-page="/GymClasses/Index" class="list-group-item list-group-item-action bg-dark text-white">
                        <i class="fas fa-calendar-alt me-2"></i> Clase / Orar
                    </a>
                    <a asp-page="/MembershipTypes/Index" class="list-group-item list-group-item-action bg-dark text-white">
                        <i class="fas fa-id-card me-2"></i> Abonamente
                    </a>
                }
            </div>
        </div>

        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
                <div class="container-fluid">
                    <span class="navbar-text ms-auto">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            // daca e logat, ii aratam numele si buton de logout
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                Salut, <b>@User.Identity.Name</b> |
                                <button type="submit" class="btn btn-link text-dark" style="text-decoration:none; padding:0;">Logout <i class="fas fa-sign-out-alt"></i></button>
                            </form>
                        }
                        else
                        {
                            // Daca NU e logat, buton de login
                            <a class="text-dark fw-bold" asp-area="Identity" asp-page="/Account/Login">
                                Login <i class="fas fa-sign-in-alt"></i>
                            </a>
                            <span> | </span>
                            <a class="text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        }
                    </span>
                </div>
            </nav>

            <div class="container-fluid p-4">
                @RenderBody()
            </div>
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FitCore
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>