@page
@model FitCore.Web.Pages.Trainers.IndexModel

@{
    ViewData["Title"] = "Antrenori";
}

<!--header al tabelului si search bar-->
<div class="d-flex justify-content-between align-items-center mb-4 bg-white p-4 rounded shadow-sm">
    <h2 class="m-0 text-dark" style="border:none;">GESTIUNE ANTRENORI</h2>

    <div class="d-flex gap-2">
        <input type="text" class="form-control" placeholder="Search..." style="width: 200px;">

        <a asp-page="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Adaugă Antrenor Nou
        </a>
    </div>
</div>

<table class="table table-hover bg-white">
    <thead>
        <tr>
            <th>Nume</th>
            <th>Specializare</th>
            <th>Email</th>
            <th class="text-center">Acțiuni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Trainer)
        {
            <tr>
                <td class="fw-bold">@Html.DisplayFor(modelItem => item.Name)</td>
                <!--generare email dupa nume si prenume-->
                <td>@Html.DisplayFor(modelItem => item.Specialization)</td>
                <td>@item.Name.ToLower().Replace(" ", "")@("@fit.ro")</td>
                <!--butoanele de actiune edit/delete-->
                <td class="text-center">
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger text-danger border-0">Sterge</a>
                </td>
            </tr>
        }
    </tbody>
</table>