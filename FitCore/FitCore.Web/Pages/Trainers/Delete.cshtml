@page
@model FitCore.Web.Pages.Trainers.DeleteModel

@{
    ViewData["Title"] = "Șterge Antrenor";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">

        <div class="bg-white p-5 rounded shadow-sm text-center border-top border-5 border-danger">

            <div class="mb-4">
                <i class="fas fa-exclamation-circle text-danger fa-4x mb-3"></i>
                <h2 class="fw-bold text-dark">Ești sigur?</h2>
                <p class="text-muted">Această acțiune este ireversibilă. Următorul antrenor va fi șters:</p>
            </div>

            <div class="bg-light p-3 rounded mb-4 text-start">
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-secondary">Nume:</dt>
                    <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Trainer.Name)</dd>

                    <dt class="col-sm-4 text-secondary">Specializare:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Trainer.Specialization)</dd>
                </dl>
            </div>

            <form method="post">
                <input type="hidden" asp-for="Trainer.Id" />
                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <a asp-page="./Index" class="btn btn-light px-4">Nu, Anulează</a>
                    <button type="submit" class="btn btn-danger px-4">Da, Șterge</button>
                </div>
            </form>
        </div>

    </div>
</div>