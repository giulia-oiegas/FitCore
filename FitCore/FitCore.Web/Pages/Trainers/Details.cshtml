@page
@model FitCore.Web.Pages.Trainers.DetailsModel

@{
    ViewData["Title"] = "Detalii Antrenor";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8">
        <div class="bg-white p-5 rounded shadow-sm">

            <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
                <h2 class="fw-bold m-0 text-primary">Profil Antrenor</h2>
                <span class="badge bg-warning text-dark fs-6">Activ</span>
            </div>

            <dl class="row fs-5">
                <dt class="col-sm-4 text-secondary">Nume Complet:</dt>
                <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Trainer.Name)</dd>

                <dt class="col-sm-4 text-secondary">Specializare:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Trainer.Specialization)</dd>

                <dt class="col-sm-4 text-secondary">Email FitCore:</dt>
                <dd class="col-sm-8 text-primary">@Model.Trainer.Name.ToLower().Replace(" ", "")@("@fitcore.ro")</dd>
            </dl>

            <div class="mt-5 d-flex gap-2">
                <a asp-page="./Edit" asp-route-id="@Model.Trainer.Id" class="btn btn-primary px-4">
                    <i class="fas fa-edit"></i> Editează
                </a>
                <a asp-page="./Index" class="btn btn-outline-secondary px-4">Înapoi la Listă</a>
            </div>
        </div>
    </div>
</div>