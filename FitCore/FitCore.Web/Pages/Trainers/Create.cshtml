@page
@model FitCore.Web.Pages.Trainers.CreateModel

@{
    ViewData["Title"] = "Adauga Antrenor";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="bg-white p-5 rounded shadow-sm">

            <div class="mb-4 text-center">
                <h2 class="fw-bold text-dark">Adaugă Antrenor</h2>
                <p class="text-muted">Completează detaliile noului membru al echipei.</p>
            </div>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Trainer.Name" class="control-label fw-bold mb-1">Nume Complet</label>
                    <input asp-for="Trainer.Name" class="form-control form-control-lg" placeholder="ex: Ion Popescu" />
                    <span asp-validation-for="Trainer.Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Trainer.Specialization" class="control-label fw-bold mb-1">Specializare</label>
                    <input asp-for="Trainer.Specialization" class="form-control form-control-lg" placeholder="ex: Fitness, Yoga" />
                    <span asp-validation-for="Trainer.Specialization" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Salvează Antrenorul</button>
                    <a asp-page="Index" class="btn btn-outline-secondary">Anulează</a>
                </div>
            </form>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}