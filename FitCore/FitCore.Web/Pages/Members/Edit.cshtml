@page
@model FitCore.Web.Pages.Members.EditModel

@{
    ViewData["Title"] = "Editează Membru";
}

<div class="row justify-content-center">
    <div class="col-md-8">

        <div class="bg-white p-5 rounded shadow-sm">

            <div class="mb-4 text-center">
                <h2 class="fw-bold text-dark">Editează Date Membru</h2>
                <p class="text-muted">Actualizează informațiile de contact.</p>
            </div>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Member.Id" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Member.LastName" class="control-label fw-bold mb-1">Nume de Familie</label>
                        <input asp-for="Member.LastName" class="form-control form-control-lg" />
                        <span asp-validation-for="Member.LastName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Member.FirstName" class="control-label fw-bold mb-1">Prenume</label>
                        <input asp-for="Member.FirstName" class="form-control form-control-lg" />
                        <span asp-validation-for="Member.FirstName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Member.Email" class="control-label fw-bold mb-1">Email</label>
                    <input asp-for="Member.Email" class="form-control form-control-lg" />
                    <span asp-validation-for="Member.Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Member.PhoneNumber" class="control-label fw-bold mb-1">Telefon</label>
                    <input asp-for="Member.PhoneNumber" class="form-control form-control-lg" />
                    <span asp-validation-for="Member.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Salvează Modificările</button>
                    <a asp-page="./Index" class="btn btn-outline-secondary">Anulează</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}