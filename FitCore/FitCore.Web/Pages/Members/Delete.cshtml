@page
@model FitCore.Web.Pages.Members.DeleteModel

@{
    ViewData["Title"] = "Șterge Membru";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">

        <div class="bg-white p-5 rounded shadow-sm text-center border-top border-5 border-danger">

            <div class="mb-4">
                <i class="fas fa-user-times text-danger fa-4x mb-3"></i>
                <h2 class="fw-bold text-dark">Ștergi acest cont?</h2>
                <p class="text-muted">Atenție! Toate rezervările asociate acestui membru vor fi de asemenea afectate.</p>
            </div>

            <div class="bg-light p-3 rounded mb-4 text-start">
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-secondary">Nume:</dt>
                    <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Member.FirstName) @Html.DisplayFor(model => model.Member.LastName)</dd>

                    <dt class="col-sm-4 text-secondary">Email:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Member.Email)</dd>

                    <dt class="col-sm-4 text-secondary">Telefon:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Member.PhoneNumber)</dd>
                </dl>
            </div>

            <form method="post">
                <input type="hidden" asp-for="Member.Id" />
                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <a asp-page="./Index" class="btn btn-light px-4">Nu, Păstrează</a>
                    <button type="submit" class="btn btn-danger px-4">Da, Șterge Membrul</button>
                </div>
            </form>
        </div>
    </div>
</div>