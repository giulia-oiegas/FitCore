@page
@model FitCore.Web.Pages.Members.IndexModel

@{
    ViewData["Title"] = "Membri";
}

<div class="d-flex justify-content-between align-items-center mb-4 bg-white p-4 rounded shadow-sm">
    <h2 class="m-0 text-dark" style="border:none;">GESTIUNE MEMBRI</h2>

    <div class="d-flex gap-2">
        <a asp-page="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Inscrie Membru Nou
        </a>
    </div>
</div>

<table class="table table-hover bg-white">
    <thead>
        <tr>
            <th>Nume Complet</th>
            <th>Email</th>
            <th>Telefon</th>
            <th class="text-center">Actiuni</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Member)
        {
            <tr>
                <td class="fw-bold">@item.FirstName @item.LastName</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td class="text-center">
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1">Detalii</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger border-0">Sterge</a>
                </td>
            </tr>
        }
    </tbody>
</table>
