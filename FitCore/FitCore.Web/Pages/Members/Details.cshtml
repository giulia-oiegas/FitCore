@page
@model FitCore.Web.Pages.Members.DetailsModel

@{
    ViewData["Title"] = "Profil Membru";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8">
        <div class="bg-white p-5 rounded shadow-sm">

            <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
                <div class="d-flex align-items-center">
                    <div class="bg-light rounded-circle p-3 me-3 text-secondary">
                        <i class="fas fa-user fa-2x"></i>
                    </div>
                    <div>
                        <h2 class="fw-bold m-0 text-primary">@Model.Member.FirstName @Model.Member.LastName</h2>
                        <span class="text-muted">Membru FitCore</span>
                    </div>
                </div>
                <span class="badge bg-success fs-6">Activ</span>
            </div>

            <div class="row mt-4">
                <div class="col-md-6 border-end">
                    <h5 class="text-uppercase text-secondary small mb-3">Informații Contact</h5>

                    <div class="mb-3">
                        <label class="fw-bold d-block">Email:</label>
                        <a href="mailto:@Model.Member.Email" class="text-decoration-none text-dark">
                            <i class="far fa-envelope me-2 text-primary"></i> @Model.Member.Email
                        </a>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold d-block">Telefon:</label>
                        <span class="text-dark">
                            <i class="fas fa-phone-alt me-2 text-primary"></i> @Model.Member.PhoneNumber
                        </span>
                    </div>
                </div>

                <div class="col-md-6 ps-md-4">
                    <h5 class="text-uppercase text-secondary small mb-3">Statistici Rapide</h5>
                    <p class="text-muted">Istoricul rezervărilor va apărea aici.</p>
                </div>
            </div>

            <div class="mt-5 d-flex gap-2 justify-content-end border-top pt-4">
                <a asp-page="./Edit" asp-route-id="@Model.Member.Id" class="btn btn-primary px-4">
                    <i class="fas fa-user-edit"></i> Editează
                </a>
                <a asp-page="./Index" class="btn btn-outline-secondary px-4">Înapoi</a>
            </div>
        </div>
    </div>
</div>