<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FitCore.Mobile.Views.GymClassesPage">

    <CollectionView ItemsSource="{Binding Classes}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="10" Padding="12" CornerRadius="16">
                    <VerticalStackLayout>
                        <Label Text="{Binding Name}"
                               FontSize="18"
                               FontAttributes="Bold"/>

                        <Label Text="{Binding TrainerName}" />

                        <Label Text="{Binding Schedule,
                            StringFormat='{0:HH:mm}'}"/>

                        <Button Text="REZERVÄ‚"
                                BackgroundColor="#FF6B00"
                                TextColor="White"
                                CornerRadius="12"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
