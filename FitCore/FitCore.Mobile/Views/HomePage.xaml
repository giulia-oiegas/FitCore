<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FitCore.Mobile.Views.HomePage"
    BackgroundColor="#F6F6F6">

    <!-- NU ScrollView + CollectionView -->
    <VerticalStackLayout Padding="16"
                         Spacing="16">

        <!-- TITLU / SALUT -->
        <VerticalStackLayout Spacing="4">

            <Label Text="{Binding Greeting}"
                   FontSize="22"
                   TextColor="#212121" />

            <Label Text="{Binding TodayText}"
                   FontSize="14"
                   TextColor="#757575" />

        </VerticalStackLayout>

        <BoxView HeightRequest="1"
                 BackgroundColor="#E0E0E0" />

        <Label Text="CLASE DISPONIBILE"
               FontSize="13"
               TextColor="#757575" />

        <!-- LISTĂ -->
        <CollectionView x:Name="ClassesView"
                        Margin="0,8,0,0">

            <CollectionView.ItemTemplate>
                <DataTemplate>

                    <Frame Padding="14"
                           Margin="0,8"
                           BackgroundColor="White"
                           BorderColor="#D0D0D0"
                           CornerRadius="4"
                           HasShadow="False">

                        <VerticalStackLayout Spacing="6">

                            <Label Text="{Binding TimeInterval}"
                                   FontSize="14"
                                   TextColor="#212121" />

                            <Label Text="{Binding Name}"
                                   FontSize="18"
                                   TextColor="#212121" />

                            <Label Text="{Binding Trainer.Name}"
                                   FontSize="14"
                                   TextColor="#757575" />

                            <Label Text="{Binding Date}"
                                   FontSize="13"
                                   TextColor="#757575" />

                            <Button Text="REZERVĂ"
                                    BackgroundColor="#FF6B00"
                                    TextColor="White"
                                    HeightRequest="44"
                                    CornerRadius="2"
                                    CommandParameter="{Binding .}"
                                    Clicked="OnBookClicked" />

                        </VerticalStackLayout>

                    </Frame>

                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
