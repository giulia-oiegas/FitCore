<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FitCore.Mobile.Views.RegisterPage"
    BackgroundColor="#EFEFEF">

    <ScrollView>
        <VerticalStackLayout>

            <!-- CONTENT -->
            <VerticalStackLayout Padding="28"
                                 Spacing="18">

                <Label Text="Creează cont FitCore"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="#212121"/>

                <Label Text="Completează datele de mai jos"
                       FontSize="14"
                       TextColor="#666"/>

                <!-- CARD REGISTER -->
                <Frame Padding="20"
                       CornerRadius="4"
                       BackgroundColor="White"
                       BorderColor="#D0D0D0"
                       HasShadow="False">

                    <VerticalStackLayout Spacing="14">

                        <Entry x:Name="FirstNameEntry"
                               Placeholder="Prenume"/>

                        <Entry x:Name="LastNameEntry"
                               Placeholder="Nume"/>

                        <Entry x:Name="EmailEntry"
                               Placeholder="Email"
                               Keyboard="Email"/>

                        <Entry x:Name="PhoneEntry"
                               Placeholder="Telefon"
                               Keyboard="Telephone"/>

                        <Entry x:Name="PasswordEntry"
                               Placeholder="Parolă"
                               IsPassword="True"/>

                        <Button Text="REGISTER"
                                BackgroundColor="#FF6B00"
                                TextColor="White"
                                HeightRequest="48"
                                CornerRadius="2"
                                Clicked="OnRegister"/>

                    </VerticalStackLayout>
                </Frame>

                <Button Text="Ai deja cont? Login"
                        BackgroundColor="Transparent"
                        TextColor="#666"
                        Clicked="OnGoToLogin"/>

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
