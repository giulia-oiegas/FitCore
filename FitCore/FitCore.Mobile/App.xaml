<?xml version="1.0" encoding="UTF-8" ?>
<Application
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FitCore.Mobile"
    xmlns:converters="clr-namespace:FitCore.Mobile.Converters"
    x:Class="FitCore.Mobile.App">

    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:BoolToStatusTextConverter
                x:Key="BoolToStatusTextConverter"/>

            <converters:BoolToColorConverter
                x:Key="BoolToColorConverter"/>

        </ResourceDictionary>
    </Application.Resources>

</Application>
